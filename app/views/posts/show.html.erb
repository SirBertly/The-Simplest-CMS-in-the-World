<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>
<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<h2>Comments</h2>
<div id = "comments">
  <% @post.comments.each do |c| %>
    <p>
      <b><%= c.name %> said:</b>
    </p>

    <p>
      <%= c.body %>
    </p>
  <% end %>
</div>

<% form_for(@comment = @post.comments.build, :remote => true) do |f| %>
  <p>
    <%= f.hidden_field :post_id %>
    <%= f.label :name, "Author" %><br />
    <%= f.text_field :name %><br />
    <%= f.label :body, "Comment" %><br />
    <%= f.text_area :body, :height => "200px" %>
  </p>

  <p>
    <%= f.submit "Add Comment" %>
  </p>
<% end %>

